{
  "manifest_version": 3,
  "name": "LinkedIn Clipboard Linker",
  "version": "2.0",
  "permissions": ["clipboardRead", "activeTab"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "host_permissions": [
    "https://script.google.com/*",
    "https://script.googleusercontent.com/*"
  ]
}
